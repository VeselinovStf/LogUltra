@model IEnumerable<LogUltra.UI.ViewModels.LogViewModel>

@{
    ViewData["Title"] = "Logs";
}

<link href="~/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />



<h1>@ViewData["Title"]</h1>
<br/>
<table>
    <tr>       
        <td>
            <select id='searchByLevel'>
                <option value=''>-- Select Level--</option>

            </select>
        </td>
         <td>
            <select id='searchBySource'>
                <option value=''>-- Source --</option>
            </select>
        </td>
         <td>
            <select id='searchByException'>
                <option value=''>-- Exception--</option>
            </select>
        </td>
    </tr>
</table>

<br/>
<table class="table table-striped table-bordered dt-responsive nowrap" width="100%" id="logsTable">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Date
            </th>
            <th>
                Level
            </th>
            <th>
                Source
            </th>
            <th>
                Message
            </th>
            <th>
                Exception
            </th>
            <th>
                Content
            </th>
        </tr>
    </thead>
  
</table>
@section Scripts
{
<script src="~/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/datatables/js/dataTables.bootstrap4.min.js"></script>
<script src="~/js/logsTable.js"></script>

}